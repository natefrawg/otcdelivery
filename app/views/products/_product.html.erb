<div class="box">
  <%= image_tag product.image(:medium) %>
  <div class="description">
	  <strong>
		  <%= product.product_name %>
	  </strong>
	  <%= product.description %>
  </div>
  <%= product.url %>
  <%= link_to 'Show', product %>
  <% if user_signed_in? %>
	  <p>
	  <%= link_to 'Edit', edit_product_path(product) %>
	  <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
		</p>
	<% end %>
</div>