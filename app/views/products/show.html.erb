<div class = "row">
	<div class = "span6 offset3">
		<div class = "well">
			<%= image_tag @product.image %>
			<p>
			  <b>Product Name:</b>
			  <%= @product.product_name %>
			</p>
			<p>
			  <b>Description:</b>
			  <%= @product.description %>
			</p>

			<p>
			  <b>URL:</b>
			  <%= @product.url %>
			</p>
			
			<%= link_to 'Edit', edit_product_path(@product) %> |
			<%= link_to 'Back', products_path %>
		
		</div>
	</div>
</div>


